<Window x:Class="FontCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PixelFont Creator v0.0.3 - Sept, 2025"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Global button style: larger horizontal padding, consistent width/margins -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
        <!-- Light margin for small TextBoxes -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <!-- Left: pixel editor (fixed width) -->
            <ColumnDefinition Width="Auto"/>
            <!-- Right: flexible controls -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Pixel grid -->
        <Border Grid.Column="0" Margin="0,0,12,0" Padding="8" Background="#10202020" CornerRadius="6">
            <Grid>
                <Grid Name="gridPixel"
                      Width="480" Height="480"
                      Background="#FF1B4729"/>
            </Grid>
        </Border>

        <!-- Right side -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Nav / file ops -->
                <RowDefinition Height="*"/>
                <!-- Content -->
                <RowDefinition Height="Auto"/>
                <!-- Status -->
            </Grid.RowDefinitions>

            <!-- Row 0: Navigation + file ops -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,8">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="0,0,16,0">
                    <Button Name="btnStart" Content="_Start (s)"/>
                    <Button Name="btnBack"  Content="_Back (b)"/>
                    <Button Name="btnNext"  Content="_Next (n)"/>
                    <Button Name="btnEnd"   Content="_End (e)"/>
                    <Button x:Name="btnClear" Content="C_lear"/>
                    <Button x:Name="btnCopy"  Content="_Copy"/>
                    <Button x:Name="btnPaste" Content="Pa_ste"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button x:Name="btnLoadFont" Content="_Load"/>
                    <Button x:Name="btnSaveFont" Content="_Save"/>
                    <Button x:Name="btnOpenFont" Content="_Open File…"/>
                    <Button x:Name="btnCreateFont" Content="_Create"/>
                    <TextBlock Text="Width:" VerticalAlignment="Center" Margin="12,0,4,0"/>
                    <TextBox x:Name="txtFontWidth"  Width="56" Text="16"/>
                    <TextBlock Text="Height:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBox x:Name="txtFontHeight" Width="56" Text="24"/>
                </StackPanel>
            </DockPanel>

            <!-- Row 1: Main content area in two columns -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="340"/>
                    <!-- left panel: big glyph + ascii -->
                    <ColumnDefinition Width="*"/>
                    <!-- right panel: metrics + preview -->
                </Grid.ColumnDefinitions>

                <!-- Left content: current character -->
                <StackPanel Grid.Column="0" Margin="0,0,16,0">
                    <TextBlock x:Name="txtChar"
                               Text=""
                               FontSize="120"
                               Background="#FFE5E5E5"
                               Padding="8"
                               TextAlignment="Center"
                               Width="320" Height="180"/>
                    <TextBlock x:Name="txtAscii" Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Right content: metrics + spacing + preview -->
                <StackPanel Grid.Column="1">
                    <Border Padding="10" Background="#0F000000" CornerRadius="6" MaxWidth="900">
                        <StackPanel>
                            <TextBlock Text="Glyph metrics" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <WrapPanel Margin="0,0,0,4">
                                <TextBlock Text="Left:" Margin="0,0,4,0"/>
                                <TextBlock x:Name="lblLeft" Margin="0,0,12,0"/>
                                <TextBlock Text="Right:" Margin="0,0,4,0"/>
                                <TextBlock x:Name="lblRight" Margin="0,0,12,0"/>
                                <TextBlock Text="TrimW:" Margin="0,0,4,0"/>
                                <TextBlock x:Name="lblTrimW" Margin="0,0,12,0"/>
                                <TextBlock Text="XOffset:" Margin="0,0,4,0"/>
                                <TextBlock x:Name="lblXOffset" Margin="0,0,12,0"/>
                                <TextBlock Text="XAdvance:" Margin="0,0,4,0"/>
                                <TextBlock x:Name="lblXAdvance"/>
                            </WrapPanel>

                            <WrapPanel Margin="0,6,0,0">
                                <TextBlock Text="Letter spacing:" Margin="0,0,4,0"/>
                                <TextBox x:Name="txtLetterSpacing" Width="56" Text="1"/>
                                <TextBlock Text="Space advance:" Margin="12,0,4,0"/>
                                <TextBox x:Name="txtSpaceAdvance" Width="56" ToolTip="Leave blank to use width/2"/>
                                <TextBlock Text="Min advance:" Margin="12,0,4,0"/>
                                <TextBox x:Name="txtMinAdvance" Width="56" Text="1"/>
                                <TextBlock Text="Preview width:" Margin="12,0,4,0"/>
                                <TextBlock x:Name="lblPreviewWidth"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <Border Padding="10" Background="#0F000000" CornerRadius="6" Margin="0,8,0,0" MaxWidth="900">
                        <StackPanel>
                            <TextBlock Text="Preview text" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <TextBox x:Name="txtPreview"
                                     FontSize="16"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="120"
                                     Text="The quick brown fox jumps over the lazy dog. 0123456789
WAVVY — Illi.;:!  ~|[]{} () &amp; @#$%"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- Row 2: Status -->
            <Border Grid.Row="2" Background="#FFEFEFEF" Padding="8" CornerRadius="6" Margin="0,8,0,0">
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Status" FontWeight="SemiBold" DockPanel.Dock="Top" Margin="0,0,0,4"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="140">
                        <TextBox x:Name="txtStatus"
                                 Background="White"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"/>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
